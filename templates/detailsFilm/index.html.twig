{% extends 'base.html.twig' %}

{% block title %}Catalogue de Films{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="{{ asset('css/detailFilm.css') }}">
{% endblock %}

{% block body %}
<section class="detailFilm-principal" style="--bg-image: url('{{ asset('uploads/affiches/' ~ film.affiche) }}')">
    <div class="detailFilm-principal-gauche">
        <img src="{{ asset('uploads/affiches/' ~ film.affiche) }}" alt="{{ film.titre }}">
    </div>
    <div class="detailFilm-principal-droite">
    <div class="detailFilm-principal-droite-info">
        <h1>{{ film.titre }}</h1>
        <p>{{ film.annee }}</p>
        <p>{{ film.duree }}</p>
        <p>{{ film.genres }}</p>
        <p>{{ film.prixLocation }}</p>
        <p>{{ film.synopsis }}</p>
    </div>
    <div class="detailFilm-principal-bouton">
        <button>Louer à {{ film.prixLocation }} €</button>
        <button>Ajouter au panier</button>
    </div>
    </div>
</section>
<section class="detailFilm-secondaire">

</section>
{% endblock %}
